#Strings are immutable
a = "Avantika"
print(len(a))
print(a.upper())
print(a.lower())
a = "!!Avantika!!! Mishra!!!!!!  Avantika"
print(a)
print(a.rstrip("!"))
print(a.replace("Avantika", "Sonali"))
print(a.split(" "))
blogHeading = "introduction to js"
print(blogHeading.capitalize())
#Center()
str1 = "Welcome to the Console!!!"
print(str1.center(50))
print(len(str1))
print(len(str1.center(50)))
#Count()
print(a.count("Avantika"))
#endswith()
str1 = "Welcome to the Console!!!"
print(str1.endswith("!!!"))

str1 = "Welcome to the Console!!!"
print(str1.endswith("to", 4, 10))
#find()
str1 = "He's name is Dan. He is an honest man."
print(str1.find("is"))
print(str1.find("ishhh"))
#index() shows ValueError: substring not found
#print(str1.index("ishh"))
#isalnum()
str1 = "WelcomeToTheConsole"
print(str1.isalnum())
#isalpha()
str1 = "Welcome00ToTheConsole"
print(str1.isalpha())
#islower()
str1 = "WelcomeToTheConsole"
print(str1.islower())
str1 = "welcome to the console"
print(str1.islower())

#isprintable()
str1 = "We wish you a Merry Christmas."
print(str1.isprintable())
str1 = "We wish you a Merry Christmas.\n"
print(str1)
print(str1.isprintable())

#isspace()
str1 = "       "  #using Spacebar
print(str1.isspace())
str2 = ""  #using Tab
print(str2.isspace())

#istitle() if first letter of each world is capital
str1 = "World Health Organization"
print(str1.istitle())
str2 = "To kill a Mocking bird"
print(str2.istitle())

#startswith()
str1 = "Python is an Interpreted Language"
print(str1.startswith("Python"))

#swapcase() convert lowercase to uppercase & viceversa
str1 = "Python is an Interpreted Language"
print(str1.swapcase())

#title() is used to capitalizes each letter of word within String
str1 = "Python is an Interpreted Language"
print(str1.title())